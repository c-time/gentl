{
  "name": "@c-time/gentl",
  "version": "1.0.3",
  "description": "",
  "main": "dist/Gentl.node.js",
  "module": "dist/Gentl.browser.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "type": "module",
  "scripts": {
    "build": "run-s build:tsc build:esbuild",
    "build:tsc": "tsc",
    "build:node.backup": "esbuild src/Gentl.ts --bundle --outfile=dist/Gentl.node.js --platform=node",
    "build:esbuild": "node esbuild.config.mjs",
    "build:browser.backup": "esbuild src/Gentl.ts --bundle --outfile=dist/Gentl.browser.js --platform=browser",
    "test": "node --experimental-strip-types --test test/**/*.test.ts",
    "publish": "npm publish --access public"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false,
    "https": false,
    "vm": false,
    "events": false,
    "url": false,
    "buffer": false,
    "http": false,
    "stream": false,
    "crypto": false,
    "net": false,
    "zlib": false,
    "tls": false,
    "child_process": false,
    "string_decoder": false,
    "assert": false,
    "util": false
  },
  "author": "PRODUCTION C-TIME",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-time/gentl.git"
  },
  "bugs": {
    "url": "https://github.com/c-time/gentl/issues"
  },
  "homepage": "https://github.com/c-time/gentl#readme",
  "dependencies": {
    "jsdom": "^26.0.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.10",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}